<% layout('/layouts/boilerplate') %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        #filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        #filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        #filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3rem;
            padding: 1rem;
            margin-left: 3rem;
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;

        }
    </style>

    <body>
        <div id="filters">
            <div id="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic cities</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </div>
            <div id="filter">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pool</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-caravan"></i>
                <p>Camping</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-tractor"></i>
                <p>Farms</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-snowman"></i>
                <p>Arctic</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-landmark-dome"></i>
                <p>Domes</p>
            </div>
            <div id="filter">
                <i class="fa-solid fa-sailboat"></i>
                <p>Boats</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total with taxes</label>
                </div>
            </div>
        </div>


        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

            <% for(let listings of allListings) { %>

                <div class="card col listing-card">
                    <a href="/listings/<%= listings._id %>"><img src="<%= listings.image.url %>" class="card-img-top"
                            alt="listing image" style="height: 15rem;">
                        <div class="card-img-overlay"></div>
                    </a>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listings.title %>
                            </b><br>
                            &#8360 <%= listings.price.toLocaleString("en-IN") %>/ night
                                <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>

                <% } %>
        </div>
    </body>
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (const info of taxInfo) {
                if (info.style.display == "inline") {
                    info.style.display = "none";
                } else {
                    info.style.display = "inline";
                }
            }
        })
    </script>